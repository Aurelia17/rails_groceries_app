<div class="container mt-5">
  <div class="row">
    <div class="col-6 mb-5">
      <%= cl_image_tag @product.photo.key, height: 500, width: 500, crop: :fill %>
    </div>
    <div class="col-6">
      <div>
        <H2><%= @product.title %></H2>
        <div class="mt-4">
          <p>Description :</p>
          <p><%= @product.description %></p>
        </div>
        <div class="mt-2">
          <p>
            Prix : Rs <%= @product.price %>
          </p>
        </div>
        <div class="mt-2">
          <%= simple_form_for([@product, @order_item],url: new_order_item_path(@product)) do |f| %>
            <div class="quantity-input" data-controller="quantity-input">
              <%= f.input :quantity, as: :string, input_html: { value: 1, min: 1, step: 1, id: 'quantity-input', class: 'quantity-value', "data-action": "change->quantity-input#calculateTotalPrice" }, label: 'Quantity' %>
              <button type="button" data-action="click->quantity-input#increment">+</button>
              <button type="button" data-action="click->quantity-input#decrement">-</button>
            </div>
            <%= f.input :total_price, readonly: true, input_html: { class: 'form-control', id: 'total-price-input' }, label: 'Total Price' %>
            <%= f.button :submit, 'Add to Cart' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
