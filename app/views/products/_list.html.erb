<div class="cards" data-search-products-target="list">
  <% @products.each do |product| %>
    <% @section = product.section_id %>
    <%= link_to section_product_path(@section, product), class:"text-decoration-none" do %>
    <div class="card">
      <%= cl_image_tag product.photo.key, crop: :fill,  class:"cards-img"%>
      <div class="card-tags">
            <% product.tags.each do |tag| %>
              <h6><span><%= tag.name %></span></h6>
            <% end %>
      </div>
      <div class="card-body border-top border-secondary">
        <h6 class="card-title"><%= product.title %></h6>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
