<div class="container m-2">
  <div class="row gy-5">
    <div class="col-6">
      <%= cl_image_tag @product.photo.key, height: 200, width: 200, crop: :fill, class: "img-rating" %>
    </div>
    <div class="col-6 mt">
      <%= simple_form_for ([@section, @product, @rating]), data: { controller: "submit" } do |f| %>
        <p>Rate the product :</p>
        <%= f.input :rate, collection: (1..5).to_a, label: false, input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }  %>
        <div class="mt-3"><%= f.button :submit, 'Add rating', class: "btn-outline-cart"  %></div>
      <% end %>
    </div>
  </div>
</div>
