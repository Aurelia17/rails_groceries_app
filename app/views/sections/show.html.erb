<h1>Sections#show</h1>
<p>Find me in app/views/sections/show.html.erb</p>

<div class="container py-5">
  <div class="cards-products">
    <% @products.each do |product| %>
      <% if @section.id == product.section_id %>
        <%= link_to section_product_path(product), class:"text-decoration-none" do %>
          <div class="card">
            <%= cl_image_tag product.photo.key, crop: :fill,  class:"cards-img"%>
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
