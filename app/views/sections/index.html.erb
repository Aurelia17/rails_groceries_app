<div class="main">
  <div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>');">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
    <h2 class="pb-4">Besoin urgent de faire vos courses ?</h2>
  </div>
</div>

<div class="container py-5">
  <h2 class="pb-4">Pas kit to sofa! Pass to command</h2>
  <%= cookies[:user_name] %>
  <div class="cards">
    <% @sections.each do |section| %>
      <%= link_to section_path(section), class:"text-decoration-none" do %>
      <div class="card">
        <%= cl_image_tag section.photo.key, crop: :fill,  class:"cards-img"%>
        <div class="card-body">
          <h5 class="card-title"><%= section.title %></h5>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
