<h1>Sections#index</h1>
<p>Find me in app/views/sections/index.html.erb</p>

<div class="container py-5">
  <div class="cards">
    <% @sections.each do |section| %>
      <%= link_to section_path(section), class:"text-decoration-none" do %>
      <div class="card">
        <%= cl_image_tag section.photo.key, crop: :fill,  class:"cards-img"%>
        <div class="card-body">
          <h5 class="card-title"><%= section.title %></h5>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
