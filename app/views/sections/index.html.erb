<div class="slider-wrapper">
  <div class="slider">
  <%= image_tag("slider1.jpg", class: "slider1-img") %>
  <%= image_tag("slider2.jpg", class: "slider2-img") %>
  <%= image_tag("slider3.jpg", class: "slider3-img") %>
    <div class="slider-nav">
      <a href="#slide-1"></a>
      <a href="#slide-2"></a>
      <a href="#slide-3"></a>
    </div>
  </div>
</div>

<div class="homepage">
  <div class="container py-5">
    <p class="pb-4 fs-3">WHAT WE SERVE</p>
    <h2>YOUR FAVORITE FOOD</h2>
    <h2>FOOD DELICERY PARTNER</h2>
    <%= image_tag("services.jpg", class: "services-img") %>
    <h1>CATEGORIES</h1>
    <div class="cards">
      <% @sections.each do |section| %>
        <%= link_to section_path(section), class:"text-decoration-none" do %>
        <div class="card">
          <%= cl_image_tag section.photo.key, crop: :fill,  class:"cards-img"%>
          <div class="card-body border-top border-secondary">
            <h5 class="card-title"><%= section.title %></h5>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
